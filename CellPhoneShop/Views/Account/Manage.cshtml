@model CellPhoneShop.InfoUserModel
@{
    ViewBag.Title = "Quản lý tài khoản";
}

<h2 class="title-content push50">THÔNG TIN TÀI KHOẢN</h2>
<div class="clear push20"></div>
<p class="message-success">@ViewBag.StatusMessage</p>
<div id="update-info">
    @using (Html.BeginForm("Manage", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <table>
            <tr>
                <th class="title-table" colspan="3">Thông tin cá nhân</th>
            </tr>
            <tr>
                <td class="lb-input">@Html.LabelFor(model => model.HoTen) (<span class="mark">*</span>)</td>
                <td colspan="2">
                    @Html.EditorFor(model => model.HoTen)
                    @Html.ValidationMessageFor(model => model.HoTen)
                </td>
            </tr>
            <tr>
                <td class="lb-input">@Html.LabelFor(model => model.Email) (<span class="mark">*</span>)</td>
                <td colspan="2">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <td class="lb-input">@Html.LabelFor(model => model.NgaySinh) (<span class="mark">*</span>)</td>
                <td colspan="2">
                    @Html.TextBoxFor(model => model.NgaySinh, "{0:MM/dd/yyyy}")
                    @Html.ValidationMessageFor(model => model.NgaySinh)
                </td>
            </tr>
            <tr>
                <td class="lb-input">@Html.LabelFor(model => model.GioiTinh) (<span class="mark">*</span>)</td>
                <td colspan="2">
                    @Html.RadioButton("GioiTinh", "Nam") Nam&nbsp;&nbsp;  
                @Html.RadioButton("GioiTinh", "Nữ") Nữ
                @Html.ValidationMessageFor(model => model.GioiTinh)
                </td>
            </tr>
            <tr>
                <td class="lb-input">@Html.LabelFor(model => model.DienThoai) (<span class="mark">*</span>)</td>
                <td colspan="2">
                    @Html.EditorFor(model => model.DienThoai)
                    @Html.ValidationMessageFor(model => model.DienThoai)
                </td>
            </tr>
            <tr>
                <td class="lb-input">@Html.LabelFor(model => model.DiaChi) (<span class="mark">*</span>)</td>
                <td colspan="2">
                    @Html.EditorFor(model => model.DiaChi)
                    @Html.ValidationMessageFor(model => model.DiaChi)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Cập nhật" /></td>
                <td>
                    @Html.ActionLink("Đổi mật khẩu", "ChangePassword", "Account")
                </td>
            </tr>
        </table>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $("#NgaySinh").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: '1900:' + new Date().getFullYear
            });
        });
    </script>
}
