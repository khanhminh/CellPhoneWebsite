@model CellPhoneShop.TaiKhoan

@{
    ViewBag.Title = "Đăng ký";
}

<h2 class="title-content push50">ĐĂNG KÝ</h2>
<div class="clear push20"></div>
<div>
    <p id="intro">Đăng Ký Thành Viên CellPhoneShop</p>
</div>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "frm-register" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table>
        <tr>
            <th class="title-table" colspan="2">Thông tin tài khoản</th>
        </tr>
        <tr>
            <td class="lb-input">@Html.LabelFor(model => model.TenDangNhap) (<span class="mark">*</span>)</td>
            <td>
                @Html.TextBoxFor(model => model.TenDangNhap)
                @Html.ValidationMessageFor(model => model.TenDangNhap)
            </td>
        </tr>
        <tr>
            <td class="lb-input">@Html.LabelFor(model => model.MatKhau) (<span class="mark">*</span>)</td>
            <td>
                @Html.EditorFor(model => model.MatKhau)
                @Html.ValidationMessageFor(model => model.MatKhau)
            </td>
        </tr>
        <tr>
            <td class="lb-input">@Html.LabelFor(model => model.NhapLaiMatKhau) (<span class="mark">*</span>)</td>
            <td>
                @Html.EditorFor(model => model.NhapLaiMatKhau)
                @Html.ValidationMessageFor(model => model.NhapLaiMatKhau)
            </td>
        </tr>
        <tr>
            <td class="lb-input">@Html.LabelFor(model => model.HoTen) (<span class="mark">*</span>)</td>
            <td>
                @Html.EditorFor(model => model.HoTen)
                @Html.ValidationMessageFor(model => model.HoTen)
            </td>
        </tr>
        <tr>
            <td class="lb-input">@Html.LabelFor(model => model.Email) (<span class="mark">*</span>)</td>
            <td>
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <td class="lb-input">@Html.LabelFor(model => model.NgaySinh) (<span class="mark">*</span>)</td>
            <td>
                @Html.EditorFor(model => model.NgaySinh)
                @Html.ValidationMessageFor(model => model.NgaySinh)
            </td>
        </tr>
        <tr>
            <td class="lb-input">@Html.LabelFor(model => model.GioiTinh) (<span class="mark">*</span>)</td>
            <td>
                @Html.RadioButton("GioiTinh", "Nam") Nam&nbsp;&nbsp;  
                @Html.RadioButton("GioiTinh", "Nữ") Nữ
                @Html.ValidationMessageFor(model => model.GioiTinh)
            </td>
        </tr>
        <tr>
            <td class="lb-input">@Html.LabelFor(model => model.DienThoai) (<span class="mark">*</span>)</td>
            <td>
                @Html.EditorFor(model => model.DienThoai)
                @Html.ValidationMessageFor(model => model.DienThoai)
            </td>
        </tr>
        <tr>
            <td class="lb-input">@Html.LabelFor(model => model.DiaChi) (<span class="mark">*</span>)</td>
            <td>
                @Html.EditorFor(model => model.DiaChi)
                @Html.ValidationMessageFor(model => model.DiaChi)
            </td>
        </tr>
        <tr>
            <td></td>
            <td class="inline-button">
                <input type="submit" value="Đăng ký" />
                <input type="reset" value="Hủy bỏ tất cả" />
            </td>
        </tr>
    </table>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $("#NgaySinh").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: '1900:' + new Date().getFullYear
            });
        });
    </script>
}
