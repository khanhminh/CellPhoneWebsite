            @foreach (CellPhoneShop.NhaSanXuat nsx in ViewBag.Brands)
            {
            <li>
              @Html.ActionLink(nsx.Ten, "Index", "Product", new { brand = nsx.MaNSX}, null)
            </li>
            }
          
        </ul>
      </li>
      <li>@Html.ActionLink("Liên hệ", "Contact", "Home")</li>
      <li>@Html.ActionLink("Giới thiệu", "About", "Home")</li>
