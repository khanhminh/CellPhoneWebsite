<!-- Search bar & Shopping Cart -->
<div class="wrapper row3">
	<div id="search">
		<div class="one_half">
            @using (Html.BeginForm("Search", "Product", FormMethod.Get))
            {
                <input type="text" name="query" value="@ViewBag.query" class="one_half" id="text-search-product"/> 
				<input type="submit" value="Tìm kiếm" class="one_ten" id="btnSearch"/>
            }
		</div>
        @{Html.RenderAction("CartSummary", "ShoppingCart");}
	</div>
</div>

<!-- content -->
