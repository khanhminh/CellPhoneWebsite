@model CellPhoneShop.DonDatHang
@{
    ViewBag.Title = "Details";
}

<div class="title-content">
    <h2>CHI TIẾT ĐƠN HÀNG</h2>
</div>
<div class="nav-page push30">
    <a>Cellphone</a> » 
    <a href="/Order/Index">Quản lý đơn hàng</a> » 
    <span class="active-link"><a>Chi tiết đơn hàng</a></span>
</div>

@if (Model != null)
{
    <table id="table-order">
        <tr>
            <th>STT</th>
            <th>Sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Tổng cộng</th>
        </tr>
        @foreach (CellPhoneShop.ChiTietDonHang ctdh in Model.ChiTietDonHangs)
        {
            <tr>
                <td>@(Model.ChiTietDonHangs.IndexOf(ctdh) + 1)</td>
                <td><a href="/Product/Details?id=@ctdh.MaSP">@ctdh.SanPham.TenSP</a></td>
                <td>@string.Format("{0:0,0} VNĐ", ctdh.Gia)</td>
                <td>@ctdh.SoLuong</td>
                <td>@string.Format("{0:0,0} VNĐ", ctdh.SoLuong * ctdh.Gia)</td>
            </tr>
        }
        <tr>
            <td colspan="4" style="font-weight: bold; text-align: right;">Tổng cộng</td>
            <td style="font-weight: bold; color: red;">
                @string.Format("{0:0,0} VNĐ", Model.DonGia)
            </td>
        </tr>
    </table>
    <table style="width: 400px; border: #ccc solid 1px;">
        <tr>
            <th colspan="2" style="background-color: #c7e9f0; padding: 10px 5px 10px 5px;">Người nhận</th>
        </tr>
        <tr style="background-color: #ffffff; border: #ccc solid 1px;">
            <td>Họ tên</td>
            <td>@Model.NguoiNhan.HoTen</td>
        </tr>
        <tr style="background-color: #f1f8f9; border: #ccc solid 1px;">
            <td>Điện thoại</td>
            <td>@Model.NguoiNhan.DienThoai</td>
        </tr>
        <tr style="background-color: #ffffff; border: #ccc solid 1px;">
            <td>Địa chỉ</td>
            <td>@Model.NguoiNhan.DiaChi</td>
        </tr>
    </table>
    <div>
        <span style="color: blue; font-weight: bold;">Phương thức thanh toán: </span><span>@Model.PhuongThucThanhToan.Ten</span>
    </div>
    <div>
        <span style="color: blue; font-weight: bold;">Phương thức giao hàng: </span><span>@Model.PhuongThucGiaoHang.Ten</span>
    </div>
    <div class="push30"></div>
}
else
{
    <h5 class="notify-order">Không tìm thấy đơn hàng</h5>
}
